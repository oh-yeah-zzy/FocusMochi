{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FocusMochi",
  "version": "0.1.0",
  "identifier": "com.zzy.focus-mochi",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "pet",
        "title": "FocusMochi",
        "width": 200,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/models/*"
    ],
    "category": "Utility",
    "shortDescription": "AI Desktop Pet that monitors your focus",
    "longDescription": "FocusMochi is an AI-powered desktop pet that watches over you through your webcam. It grows happy when you focus and gets sad when you're distracted."
  }
}
